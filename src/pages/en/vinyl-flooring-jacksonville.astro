---
import MainLayout from '../../layouts/MainLayout.astro';
import type { Language } from '../../i18n/utils';
import QuienesSomos from '../../components/QuienesSomos.astro';
import FlooringSection from '../../components/FlooringSection.astro';
import ProjectSection from '../../components/ProjectSection.astro';
import {ContactForm, ShadersSliderMultilingual, ReviewsCarousel} from '../../components';
import Footer from '../../components/Footer.astro';

const lang: Language = 'en';

// SEO específico para esta página
const seoData = {
  title: 'Vinyl Flooring Installation Jacksonville FL - Free Quote | RGB Corporation',
  description: 'Professional vinyl flooring installation in Jacksonville, FL. Luxury vinyl planks, tiles & sheets. Free estimates, licensed & insured. Call +1 (904) 422-5380 today!',
  keywords: 'vinyl flooring installation Jacksonville FL, luxury vinyl planks Florida, vinyl tile installation Jacksonville, waterproof vinyl flooring Florida, vinyl flooring contractors Jacksonville',
  canonicalUrl: 'https://rgb-corporation.com/en/vinyl-flooring-jacksonville'
};
---

<MainLayout 
  title={seoData.title} 
  description={seoData.description}
  keywords={seoData.keywords}
  canonicalUrl={seoData.canonicalUrl}
  lang={lang}
>
  <main>
    <!-- Hero Section específico para Vinyl -->
    <div id="inicio" style="margin-top: var(--header-total-height);">
      <div class="vinyl-hero">
        <div class="hero-content">
          <h1>Vinyl Flooring Installation Jacksonville, FL</h1>
          <p>Professional vinyl flooring installation in Jacksonville and surrounding areas. Luxury vinyl planks, tiles, and sheets. Waterproof, durable, and beautiful.</p>
          <div class="hero-cta">
            <a href="tel:+19044225380" class="cta-button primary">Call Now: +1 (904) 422-5380</a>
            <a href="#contacto" class="cta-button secondary">Free Quote</a>
          </div>
          <div class="hero-features">
            <span>✓ Free Estimates</span>
            <span>✓ Licensed & Insured</span>
            <span>✓ 24h Response</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Sección específica de Vinyl -->
    <section class="vinyl-specific" data-aos="fade-up">
      <div class="container">
        <h2>Why Choose Vinyl Flooring in Jacksonville?</h2>
        <div class="vinyl-benefits">
          <div class="benefit-card">
            <h3>Waterproof</h3>
            <p>Perfect for Jacksonville's humid climate. Resistant to moisture and humidity.</p>
          </div>
          <div class="benefit-card">
            <h3>Durable</h3>
            <p>Scratch-resistant and long-lasting. Ideal for high-traffic areas.</p>
          </div>
          <div class="benefit-card">
            <h3>Affordable</h3>
            <p>Cost-effective alternative to hardwood and tile. Great value for money.</p>
          </div>
          <div class="benefit-card">
            <h3>Easy Maintenance</h3>
            <p>Simple to clean and maintain. Perfect for busy families.</p>
          </div>
        </div>
      </div>
    </section>

    <div id="quienes-somos">
      <QuienesSomos lang={lang} />
    </div>
    <div id="servicios">
      <FlooringSection lang={lang} />
    </div>
    <div id="proyectos">
      <ProjectSection lang={lang} />
    </div>
    <ReviewsCarousel lang={lang} />
    <div id="contacto">
      <ContactForm lang={lang} />
    </div>
    <Footer lang={lang} />
  </main>
</MainLayout>

<style>
  .vinyl-hero {
    background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), 
                url('https://res.cloudinary.com/drwacbtjf/image/upload/v1742920360/firstsection4_eb9qfy.jpg');
    background-size: cover;
    background-position: center;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
  }

  .hero-content {
    max-width: 800px;
    padding: 2rem;
  }

  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .hero-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .cta-button {
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .cta-button.primary {
    background: #2a7892;
    color: white;
  }

  .cta-button.primary:hover {
    background: #17596b;
    transform: translateY(-2px);
  }

  .cta-button.secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .cta-button.secondary:hover {
    background: white;
    color: #2a7892;
  }

  .hero-features {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-features span {
    background: rgba(255,255,255,0.1);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
  }

  .vinyl-specific {
    padding: 4rem 0;
    background: #f8f9fa;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .vinyl-specific h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: #2a7892;
  }

  .vinyl-benefits {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .benefit-card {
    background: white;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    text-align: center;
  }

  .benefit-card h3 {
    color: #2a7892;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .benefit-card p {
    line-height: 1.6;
    color: #666;
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2rem;
    }
    
    .hero-cta {
      flex-direction: column;
      align-items: center;
    }
    
    .hero-features {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

