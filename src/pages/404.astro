---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import type { Language } from '../i18n/utils';
import MainLayout from '../layouts/MainLayout.astro';

const { lang } = Astro.props;
const currentLang = (lang || getLangFromUrl(Astro.url)) as Language;
const t = useTranslations(currentLang);
---

<MainLayout lang={currentLang}>
  <section class="error404-section" style="min-height:60vh;display:flex;flex-direction:column;align-items:center;justify-content:center;text-align:center;">
    <h1 style="font-size:4rem;color:#8bbaca;margin-bottom:1rem;">404</h1>
    <h2 style="font-size:2rem;margin-bottom:1rem;">{t('Error.404.title', 'Página no encontrada')}</h2>
    <p style="margin-bottom:2rem;">{t('Error.404.description', 'Lo sentimos, la página que buscas no existe o fue movida.')}</p>
    <a href="/" style="background:#8bbaca;color:#fff;padding:0.8rem 2rem;border-radius:8px;text-decoration:none;font-weight:600;">{t('Error.404.backHome', 'Volver al inicio')}</a>
  </section>
</MainLayout> 